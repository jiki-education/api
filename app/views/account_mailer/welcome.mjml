- content_for :title, t('.subject')
- content_for :preview, t('.intro')

%mj-section{ "background-color": "#ffffff" }
  %mj-column
    %mj-text
      = t('.greeting', name: @user.name)

    %mj-text
      = t('.body')

    %mj-button{ "background-color": "#7c3aed", "color": "#ffffff", "font-size": "16px", "font-weight": "bold", "border-radius": "4px", "padding": "15px 30px", "href": @login_url }
      = t('.cta')
